<!doctype html>
<html>
<%- include('../res/header.ejs') %>

<body>
    <%- include('../res/navbar.ejs') %>
    <%- include('../res/search.ejs') %>
    
    <div class="container">
        <div class="d-flex flex-row flex-wrap justify-content-start">
            <% for(var i = 0; i < books.length; i++) { %>
            <div class="col-md-3">
                <div class="card shadow-sm m-2">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= books[i].name %>
                        </h5>
                        <p class="card-text">
                            <b>ISBN-10</b> <%= books[i].id %> <br>
                            <b>Available</b> <%= books[i].count %>
                        </p>
                        <form action="/" method="POST">
                            <input type="hidden" name="book_id" value="<%= books[i].id %>" />
                            <button type="submit" class="btn btn-primary">
                                Take this book
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</body>

</html>
