<!doctype html>
<html>
    <%- include('../res/header.ejs') %>
    <body>
        <%- include('../res/navbar.ejs') %>
        <div class="container">
            
            <div class="album py-3 bg-dark">
                <div class="container">
                    <div class="row mx-auto" style="width: 300px;">
                        <% for(var i = 0; i < books.length; i++) { %>
                        <div class="col">
                            <div class="card mb-2 shadow-sm">
                                <div class="card-body">
                                <p class="card-text">
                                    name : <%= books[i].name %> </br>
                                    count of books : <%= books[i].count %>
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <form action="/" method="POST">
                                            <input type="hidden" name="bookId" value="<%= books[i].id %>"/>
                                            <button type="submit" class="btn btn-sm btn-outline-secondary" >
                                                Take a book
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html> 