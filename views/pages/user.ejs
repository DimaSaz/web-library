<!doctype html>
<html>

    <%- include('../res/header.ejs') %>

    <body>

        <%- include('../res/navbar.ejs') %>
        
        <div class="container">
            <div class="album py-3 bg-dark">
                <div class="row mx-auto" style="width: 300px;">
                    <% for(var i = 0; i < books.length; i++) { %>
                    <div class="col-2-xl">
                        <div class="card mb-2 shadow-sm">
                            <div class="card-body">
                                <p class="card-text">
                                    name : <%= books[i].name %> </br>
                                    count of books : <%= books[i].count %> </br>
                                    return date: <%= books[i].date %>
                                </p>
                                <form action="/user" method="POST">
                                    <input type="hidden" name="book_id" value="<%= books[i].id %>" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">
                                        Return this book
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
</html> 