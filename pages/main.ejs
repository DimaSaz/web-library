<!doctype html>
<html>
    <head>
        <title>Library</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" 
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" 
        crossorigin="anonymous">
        <script src="../js/functions.js"></script>

    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">LIB</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" href="/">Library<span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link" href="/user">User</a>
                </div>
            </div>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
              </form>
        </nav>
        
        <div class="container">

            
            <% for(var i = 0 ; i < books.length; i++) { %>
            
            <div class="album py-3 bg-dark">
                <div class="container">
                    <div class="row mx-auto" style="width: 300px;">
                        
                        <div class="col">
                            <div class="card mb-2 shadow-sm">
                                <div class="card-body">
                                <p class="card-text">
                                    ISBN code : <%= books[i].ISBNcode%> </br>
                                    Author : <%= books[i].author%> </br>
                                    Edition code : <%= books[i].editionCode%> </br>
                                    Edition : <%= books[i].edition%> </br>
                                    Book name : <%= books[i].name%> </br>
                                    Count of this book : <%= books[i].countOfBooks%>
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="submit" 
                                                class="btn btn-sm btn-outline-secondary"
                                                onclick="takeBook(books,<%=i%>)"
                                                >
                                                Take this book</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </body>
</html> 